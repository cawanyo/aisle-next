// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // <--- Must start with "file:" for SQLite
}


enum Role {
  OWNER
  EDITOR
  VIEWER
}





model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}




model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  password      String?
  phone         String?
  // Relations
  collaborations Collaborator[] // Projects this user belongs to
  assignedTasks  Task[]         // Tasks assigned to this specific user
}

// --- PROJECT (The Wedding) ---
model Project {
  id          String   @id @default(cuid())
  title       String   @default("My Wedding")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Wedding Details (Embedded directly in Project for simplicity)
  partner1Name String?
  partner2Name String?
  weddingDate  DateTime?
  venue        String?
  address      String?
  story        String?   
  coverImage   String?
  
  // Relations / Modules
  collaborators Collaborator[]
  phases        Phase[]        // The Roadmap
  events        Event[]        // The Day-of Itinerary
  budgetItems   BudgetItem[]   // The Budget
  gifts         Gift[]         // The Registry
  guests        Guest[]        // The Guest List
  galleryImages GalleryImage[]      // Array of image URLs
  weddingDetails WeddingDetails?
}

model GalleryImage {
  id        String  @id @default(cuid())
  url       String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}


model Collaborator {
  id        String  @id @default(cuid())
  role      Role    @default(VIEWER)
  
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

// --- ROADMAP MODULE ---
model Phase {
  id        String   @id @default(cuid())
  title     String
  order     Int
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]
}

model Task {
  id            String    @id @default(cuid())
  title         String
  description   String?
  isCompleted   Boolean   @default(false)
  order         Int       @default(0)
  
  // Assignment
  assignedToId  String?
  assignedTo    User?     @relation(fields: [assignedToId], references: [id])
  
  phaseId       String
  phase         Phase     @relation(fields: [phaseId], references: [id], onDelete: Cascade)

  // Details
  estimatedCost Float     @default(0)
  realCost      Float     @default(0)
  deadline      DateTime?
  icon          String?   @default("ðŸ“Œ")
}

// --- ITINERARY MODULE ---
model Event {
  id          String    @id @default(cuid())
  title       String
  date        DateTime?
  time        String?
  location    String?
  description String?
  order       Int       @default(0)
  
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// --- BUDGET MODULE ---
model BudgetItem {
  id          String  @id @default(cuid())
  category    String  @default("General")
  name        String
  estimated   Float   @default(0)
  actual      Float   @default(0)
  paid        Float   @default(0)
  
  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// --- REGISTRY MODULE ---
model Gift {
  id          String  @id @default(cuid())
  name        String
  price       Float?
  url         String?
  imageUrl    String?
  
  takenBy     String? // Name of guest who claimed it
  message       String?


  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}


model Guest {
  id               String         @id @default(cuid())
  name             String
  email            String?
  attending        Boolean        // Yes/No
  dietary          String?        // Allergies etc.
  plusOne          Boolean        @default(false)
  
  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt        DateTime       @default(now())
}

model WeddingDetails {
  id          String   @id @default(cuid())  
  groomName   String?
  brideName   String?
  date        DateTime?
  location    String?
  coverImage  String?  // URL for the main cover
  
  // Relation to gallery images
  galleryImages WeddingGalleryImage[]
  projectId   String  @unique   // Links to your project
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  updatedAt   DateTime @updatedAt
}

model WeddingGalleryImage {
  id               String         @id @default(cuid())
  url              String
  weddingDetailsId String
  weddingDetails   WeddingDetails @relation(fields: [weddingDetailsId], references: [id], onDelete: Cascade)
}